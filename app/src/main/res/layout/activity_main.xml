<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sky"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/instructions"
        android:layout_width="359dp"
        android:layout_height="87dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text=" Press and hold an item to delete\nClick on an item to give a name to your password"
        android:textAlignment="center"
        android:background="@drawable/text_background"
        android:elevation="5dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="italic"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/details"
        android:layout_width="380dp"
        android:layout_height="143dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="15dp"

        android:background="@drawable/text_background"
        android:elevation="5dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Generator will create 9 character password containing:\n3 uppercase letters\n3 lowercase letters\n3 numbers"
        android:textAlignment="center"
        android:textColor="@color/dark_navy"
        android:textSize="18sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/generate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="205dp"
        android:background="@color/darksky"
        android:text="Generate"
        android:textSize="14sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/password_text"
        android:layout_width="311dp"
        android:layout_height="66dp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="212dp"

        android:background="@drawable/text_background"
        android:elevation="5dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Generate a Password"
        android:textAlignment="center"
        android:textColor="@color/dark_navy"
        android:textSize="20sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="149dp"
        android:background="@color/darksky"
        android:text="Save"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/showSaved_text"
        android:layout_width="243dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="4dp"
        android:text="Show saved passwords"
        android:textColor="@color/dark_navy"
        android:textSize="20sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/show_pass"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignEnd="@+id/instructions"
        android:layout_alignBottom="@+id/showSaved_text"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="0dp"
        app:srcCompat="@drawable/ic_show_eye" />

    <ListView
        android:id="@+id/password_list"
        android:layout_width="match_parent"
        android:layout_height="399dp"
        android:layout_alignBottom="@+id/details"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="111dp"
        android:layout_marginBottom="-322dp"
        android:background="@color/tan"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/hide_pass"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignEnd="@+id/instructions"
        android:layout_alignBottom="@+id/showSaved_text"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="0dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_hide_eye" />

    <TextView
        android:id="@+id/hideSaved_text"
        android:layout_width="248dp"
        android:layout_height="38dp"
        android:layout_alignTop="@+id/showSaved_text"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="3dp"
        android:text="Hide saved passwords"
        android:textColor="@color/dark_navy"
        android:textSize="20sp"
        android:textStyle="italic"
        android:visibility="invisible" />

</RelativeLayout>