<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".SavedPasswords">

    <TextView
        android:id="@+id/password_preview"
        android:layout_width="310dp"
        android:layout_height="65dp"
        android:layout_alignStart="@+id/password_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="157dp"
        android:layout_marginEnd="50dp"
        android:text="Password"
        android:background="@drawable/text_background2"
        android:elevation="5dp"
        android:gravity="center"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/return_to_main"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="23dp"
        app:srcCompat="@drawable/ic_arrow_left_circle_thin" />

    <EditText
        android:id="@+id/password_name"
        android:layout_width="310dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="243dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:hint="Name your password"
        android:inputType="textPersonName"
        android:background="@drawable/text_background2"
        android:elevation="5dp"
        android:gravity="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/save_name_button"
        android:layout_width="113dp"
        android:layout_height="65dp"
        android:layout_below="@+id/password_name"
        android:layout_alignEnd="@+id/password_preview"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="-1dp"
        android:background="@color/green"
        android:fontFamily="sans-serif-condensed"
        android:onClick="saveName"
        android:text="Save Name"
        android:textSize="16sp" />

</RelativeLayout>